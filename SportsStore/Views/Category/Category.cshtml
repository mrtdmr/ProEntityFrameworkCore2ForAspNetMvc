@model SportsStore.ViewModels.CategoryViewModel
@{
    ViewData["Title"] = "Index";
}
<h2>Categories</h2>
<br />
<div class="form-border">
    <form method="post" asp-action="SaveOrUpdate">
        <div class="col-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="TheCategory.Id" type="hidden" />
            <div class="form-group row">
                <div class="col-1">
                    <label asp-for="TheCategory.Name" class="custom-label"></label>
                </div>
                <div class="col-3">
                    <input asp-for="TheCategory.Name" class="form-control" /><span asp-validation-for="TheCategory.Name" class="text-danger"></span>
                </div>

                <div class="col-2">
                    <label asp-for="TheCategory.Description" class="custom-label"></label>
                </div>
                <div class="col-3">
                    <input asp-for="TheCategory.Description" class="form-control" /><span asp-validation-for="TheCategory.Description" class="text-danger"></span>
                </div>
                <div class="col-3">
                    <a asp-action="Index" asp-route-id="@null" class="btn btn-success">Refresh</a>
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>

            </div>
        </div>
    </form>
</div>
<div class="form-border">
    <table class="table table-striped text-wrap">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m => m.TheCategory.Name)</th>
                <th>@Html.DisplayNameFor(m => m.TheCategory.Description)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.TheCategories)
            {
                <tr>
                    <td>@Html.DisplayFor(m => item.Name)</td>
                    <td>@Html.DisplayFor(m => item.Description)</td>
                    @Html.Partial("_TableButtonPartial", (long)item.Id)
                </tr>
            }
        </tbody>
    </table>
</div>
