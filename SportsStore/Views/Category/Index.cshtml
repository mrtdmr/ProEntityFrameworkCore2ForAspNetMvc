@model IEnumerable<SportsStore.Models.Category>
@{
    ViewData["Title"] = "Index";
}
<h2>Categories</h2>
<br />
@Html.Partial("_CreateButtonPartial")
<div class="form-border">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m => m.Name)</th>
                <th>@Html.DisplayNameFor(m => m.Description)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m => item.Name)</td>
                    <td>@Html.DisplayFor(m => item.Description)</td>
                    <td><a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"><i class="fas fa-edit"></i></a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

