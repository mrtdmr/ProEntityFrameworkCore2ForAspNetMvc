@model SportsStore.Models.Product
@{
    ViewData["Title"] = "Edit";
}
<br />
<h2>Edit Product</h2>
<br />
<div class="row form-border">
    <div class="col-4">
        <form method="post" asp-action="Edit">
            <br />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input  asp-for="Id" type="hidden" />
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Category" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Category" class="form-control" />
                </div>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="PurchasePrice" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="PurchasePrice" class="form-control" />
                </div>
                <span asp-validation-for="PurchasePrice" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="RetailPrice" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="RetailPrice" class="form-control" />
                </div>
                <span asp-validation-for="RetailPrice" class="text-danger"></span>
            </div>
            <div class="col-1"></div>
            <div class="col-8">
                <input type="submit" value="Update" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </form>
    </div>
</div>

